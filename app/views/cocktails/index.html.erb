<div class="banner" style="background-image: url('<%= image_path 'cocktails' %>');">
  <div class="banner-content">
    <h1>Cock the tail</h1>
    <%= link_to "Add a cocktail", new_cocktail_path %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?<%= cocktail.name %>');">
          <div class="card-description">
            <h2> <%= cocktail.name %> </h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

